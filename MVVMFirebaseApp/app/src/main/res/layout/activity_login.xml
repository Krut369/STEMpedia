<!--
    Login Activity Layout
    This is a simple container activity that hosts the LoginFragment.
    Using FragmentContainerView is the modern way to host fragments in activities.
-->
<androidx.fragment.app.FragmentContainerView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_container"
    android:name="com.example.mvvmauth.ui.auth.LoginFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.auth.LoginActivity" />

